<Window x:Class="App.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="KofreBot Yönetim Merkezi" Height="900" Width="1520"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1C2431">
            <DockPanel Margin="24">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,28">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Width="44" Height="44" Background="#2C3A4E" CornerRadius="12" Margin="0,0,12,0">
                            <materialDesign:PackIcon Kind="ShieldKeyOutline" Foreground="White" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="KofreBot" Foreground="White" FontSize="22" FontWeight="SemiBold" />
                            <TextBlock Text="Yönetim Merkezi" Foreground="#9FB0C6" FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Kurumsal erişim ve şifre yönetimi" Foreground="#7E8FA7" FontSize="12" />
                </StackPanel>

                <StackPanel>
                    <Button Style="{StaticResource MaterialDesignContainedButton}" Margin="0,0,0,12" Content="Dashboard" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,12" Content="Kofreler" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,12" Content="Sayaçlar" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,12" Content="Şifre Operasyon" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,12" Content="Bot Merkezi" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,12" Content="Raporlar" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="Ayarlar" />
                </StackPanel>

                <Border DockPanel.Dock="Bottom" Margin="0,24,0,0" Background="#283142" CornerRadius="16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Sürüm Notları" Foreground="White" FontWeight="SemiBold" />
                        <TextBlock Text="v1.0.0 • Yeni dashboard kartları" Foreground="#9FB0C6" FontSize="12" Margin="0,4,0,12" />
                        <Button Style="{StaticResource MaterialDesignContainedButton}" Content="Güncellemeyi İncele" />
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,18">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="HomeModern" Width="22" Height="22" Foreground="#607089" />
                    <TextBlock Text="Dashboard" Margin="8,0,0,0" FontSize="16" FontWeight="SemiBold" Foreground="#607089" />
                    <TextBlock Text="• Genel Bakış" Margin="12,0,0,0" Foreground="#A0A8B5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,12,0" Content="Bildirimler" />
                    <Button Style="{StaticResource MaterialDesignContainedButton}" Content="Yeni Kofre" />
                </StackPanel>
            </DockPanel>

            <DockPanel Grid.Row="1" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="{Binding WelcomeTitle}" FontSize="24" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding DailySummary, StringFormat=• {0}}" Margin="12,0,0,0" Foreground="#7B8796" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBox Width="280" Height="38" Margin="0,0,12,0" materialDesign:HintAssist.Hint="Global arama (Ctrl+K)" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="Hızlı Ekle" Command="{Binding RefreshCommand}" />
                </StackPanel>
            </DockPanel>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Kpis}" Margin="0,0,0,24">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,16,0" Padding="18">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="#607089" />
                                        <TextBlock Text="{Binding Value}" FontSize="30" FontWeight="Bold" />
                                        <TextBlock Text="{Binding Subtitle}" Foreground="{Binding AccentColor}" />
                                    </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Grid.Column="0" Margin="0,0,16,0" Padding="22">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Son İşlemler" FontSize="16" FontWeight="SemiBold" />
                                    <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignOutlinedButton}" Content="Tümünü Gör" />
                                </DockPanel>
                                <Separator Margin="0,12,0,12" />
                                <ItemsControl ItemsSource="{Binding RecentActivities}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Description}" />
                                                <TextBlock Text=" • " Foreground="#7B8796" />
                                                <TextBlock Text="{Binding Timestamp}" Foreground="#7B8796" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>

                        <StackPanel Grid.Column="1">
                            <materialDesign:Card Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Aksiyonlar" FontSize="16" FontWeight="SemiBold" />
                                    <Separator Margin="0,12,0,12" />
                                    <TextBlock Text="Eksik şifreli 5 kofre" Margin="0,0,0,8" />
                                    <Button Style="{StaticResource MaterialDesignContainedButton}" Content="Şifre Ekle" />
                                </StackPanel>
                            </materialDesign:Card>
                            <materialDesign:Card Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Boş Durum" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock Text="Henüz rapor oluşturulmadı. Yeni bir rapor başlatın." Margin="0,8,0,12" Foreground="#7B8796" TextWrapping="Wrap" />
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="Rapor Oluştur" />
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
